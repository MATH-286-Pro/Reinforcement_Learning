<mujoco model="inverted_pendulum">
  <option timestep="0.002" cone="elliptic"/>
  <size nuserdata="1"/>
  <compiler angle="radian"/>

  <asset>
    <!-- 蓝白格子纹理与材质 / Blue checkerboard texture & material -->
    <texture name="grid" type="2d" builtin="checker"
            width="128" height="128"
            rgb1="0.2 0.3 0.7"
            rgb2="0.9 0.9 0.9"
            mark="edge" markrgb="0.2 0.2 0.2"/>
    <material name="grid_mat" 
              texture="grid"
              shininess="0.1" 
              reflectance="0.2"
              texrepeat="8 8"/>
  </asset>

  <default>
    <geom type="capsule" rgba="0.7 0.7 0.7 1" condim="6" friction="0.8 0.1 0.01"/>
    <joint armature="0.0005" damping="0.01" stiffness="0"/>
  </default>

  <worldbody>

    <!-- Lights -->
    <light name="key_sun"
          directional="true"
          pos="0 0 3"
          dir="0 0 -1"
          diffuse="0.85 0.85 0.85"
          specular="0.2 0.2 0.2"
          castshadow="true"/>
    <light name="fill"
          directional="false"
          pos="-2 -2 1"
          dir="1 1 -0.5"
          diffuse="0.45 0.45 0.45"
          specular="0.0 0.0 0.0"
          castshadow="false"/>
    <light name="rim"
          directional="false"
          pos="2 2 0.6"
          dir="-1 -1 -0.2"
          diffuse="0.25 0.25 0.25"
          specular="0.0 0.0 0.0"
          castshadow="false"/>

    <!-- Ground -->
    <!-- <geom name="floor" type="plane" size="5 5 0.1" rgba="0.2 0.3 0.4 1"/> -->
    <geom name="floor" type="plane" size="5 5 0.1" material="grid_mat"/>

    <!-- Cart on a slider -->
    <body name="cart" pos="0 0 0.05">
      <joint name="slide" type="slide" axis="1 0 0" limited="true" range="-2.4 2.4" damping="2"/>
      <geom name="cart_geom" type="box" size="0.12 0.08 0.05" mass="0.5" rgba="0.9 0.4 0.3 1"/>

      <!-- Pendulum pole: a massless rod with point mass on top (via small sphere) -->
      <body name="pole" pos="0 0 0.05">
        <joint name="hinge" type="hinge" axis="0 1 0" limited="true" range="-3.14 3.14" damping="0.001"/>
        <!-- Slim pole (mostly visual) -->
        <geom name="pole_geom" type="capsule" fromto="0 0 0 0 0 0.6" size="0.02" rgba="0.3 0.8 0.6 1" mass="0.02"/>
        <!-- Concentrated mass at the tip -->
        <geom name="tip" type="sphere" pos="0 0 0.6" size="0.03" mass="0.2" rgba="0.2 0.8 0.2 1"/>
      </body>
    </body>
  </worldbody>

  <actuator>
    <!-- Motor applying force to slider (cart) -->
    <motor name="cart_force" joint="slide" gear="1.0" ctrllimited="true" ctrlrange="-20 20"/>
  </actuator>

  <sensor>
    <jointpos name="hinge_pos" joint="hinge"/>
    <jointvel name="hinge_vel" joint="hinge"/>
    <jointpos name="slide_pos" joint="slide"/>
    <jointvel name="slide_vel" joint="slide"/>
  </sensor>
</mujoco>